<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>

  </style>
</head>

<body>
  <header>
     <% include partials/navebar %>
  </header>

   <main>
     <div class="container cadastro">
       <div class="jumbotron">
        <p>Editar [<%= professor.nome %>]: </p>
        <form action="/professores/editar/<%= professor._id %>" method="post" class="form-horizontal">
          <div class="form-group">
            <label>Nome:</label><input type="text" value="<%= professor.nome %>" class="form-control form-control-sm" name="nome">
          </div>
          <div class="form-group">
            <label>Codigo:</label><input type="text" value="<%= professor.codigo %>" class="form-control" name="codigo">
          </div>
          <div class="form-group">
            <label>Telefone:</label><input type="text" value="<%= professor.telefone %>" class="form-control" name="telefone">
          </div>
          <div class="form-group">
            <label>Login (e-mail):</label><input type="email" value="<%= professor.login %>" class="form-control" name="login">
          </div>
          <div class="form-group">
            <label>Senha:</label><input type="password" value="<%= professor.senha %>" class="form-control" name="senha">
          </div>
          <button type="submit" onclick="return confirm('Tem certeza que deseja editar essas informações? Esta ação não poderá ser desfeita!');" class="btn btn-default">Enviar</button>
        </form>
     </div>
     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
