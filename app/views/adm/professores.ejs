<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
  </style>
</head>
<body>
  <header>
     <% include partials/navebar %>
  </header>

   <main>
     <div class="container">

    <div class="jumbotron listaMonitorias">
     <p>Lista de Professores</p>
     <table>
       <thead>
         <tr>
           <th>Nome</th>
           <th>Código</th>
           <th>Local</th>
           <th>Oferta</th>
           <th>ID</th>
           <th>Editar</th>
           <th>Deletar</th>
         </tr>
       </thead>
       <tbody>
       </tbody>
     </table>
   </div>

    <div class="jumbotron cadastroProfessor">
        <p>Cadastro de Professores</p>
        <form action="/" method="post" class="form-horizontal">
          <div class="form-group">
            <label>Nome:</label><input type="text" class="form-control form-control-sm" name="nome">
          </div>
          <div class="form-group">
            <label>Código:</label><input type="text" class="form-control" name="codigo">
          </div>
          <div class="form-group">
            <label>Oferta:</label><input type="text" class="form-control" name="oferta">
          </div>
          <div class="form-group">
            <label>Local:</label><input type="text" class="form-control" name="local">
          </div>
          <div class="form-group">
            <label>Horários:</label><input type="text" class="form-control" name="horarios">
          </div>
          <div class="form-group">
            <label>GoogleMaps:</label><input type="text" class="form-control" name="googlemaps">
          </div>
          <button type="submit" class="btn btn-default">Cadastrar</button>
        </form>
     </div>

     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
