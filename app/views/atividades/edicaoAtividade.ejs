<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>

  </style>
</head>

<body>
  <header>
    <% include partials/navebar %>
  </header>

   <main>
     <div class="container edicaoAtividade">
       <div class="jumbotron">
        <p>Editar Atividade: </p>
        <form action="/planoMonitoria/editarAtividade/<%= professor %>/<%= monitoria %>/<%= atividade._id %>" method="post" class="form-horizontal">
          <div class="form-group">
            <label>Descrição da Atividade:</label>
            <textarea class="form-control" name="observacoes" rows="3"><%= atividade.observacoes %></textarea>
          </div>
          <div class="form-group">
              <label>Horas Totais da Atividade:</label>
              <input type="number" class="form-control" value="<%= atividade.horasTotais %>" name="horasTotais">
          </div>
          <button type="submit" class="btn btn-primary btn-block">Editar Atividade</button>
        </form>
     </div>
     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
