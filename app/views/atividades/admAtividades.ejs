<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
  </style>
</head>
<body>
  <header>
    <% include partials/navebar %>
  </header>

   <main>
     <div class="container listagem">

       <div class="jumbotron">
        <p>Atividades de  <%= monitoria.nomeDisciplina %></p>
        <br>
        <table>
          <thead>
            <tr>
              <th>TIPO</th>
              <th>DESCRIÇÃO</th>
              <th>PRAZO</th>
              <th>STATUS</th>
              <th>EXCLUIR</th>
            </tr>
            <% atividades.forEach(function(atividade) { %>
            <tr>
              <th><%= atividade.tipoDeAtividade %></th>
              <th><%= atividade.descricao       %></th>
              <th><%= atividade.prazo           %></th>
              <th><%= atividade.foiTerminada    %></th>
              <th><a class="btn btn-raised btn-danger btn-block" href="/atividades/excluir/<%= atividade._id %>/<%= monitoria._id %>">Excluir</a></th>
            </tr>
            <% }) %>
          </thead>
          <tbody>
          </tbody>
        </table>
        <br>
        <p>
            <a class="btn btn-primary btn-block" href="/atividades/cadastrar/<%= professor %>/<%= monitoria._id %>">Cadastrar nova atividade</a>
        </p>   
      </div>

     <div class="jumbotron">
       <p>Notificações</p>
     </div>

     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
