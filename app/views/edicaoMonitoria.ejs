<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>

  </style>
</head>

<body>
  <header>
     <nav class="navbar navbar-inverse navbar-static-top">
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
          <form class="navbar-form navbar-left">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </div><!-- /.navbar-collapse -->
     </nav>
  </header>

   <main>
     <div class="container cadastro">
       <div class="jumbotron">
        <p>Editar [<%= monitoria.nome %>]: </p>
        <form action="/monitorias/editar/<%= monitoria._id %>" method="post" class="form-horizontal">
          <div class="form-group">
            <label>Nome:</label><input type="text" value="<%= monitoria.nome %>" class="form-control form-control-sm" name="nome">
          </div>
          <div class="form-group">
            <label>Código:</label><input type="text" value="<%= monitoria.codigo %>" class="form-control" name="codigo">
          </div>
          <div class="form-group">
            <label>Local:</label><input type="text" value="<%= monitoria.local %>" class="form-control" name="local">
          </div>
          <div class="form-group">
            <label>Oferta:</label><input type="text" value="<%= monitoria.oferta %>" class="form-control" name="oferta">
          </div>
          <!-- <div class="form-group">
            <label>Horários:</label><input type="password" class="form-control" name="senha">
          </div> -->
          <div class="form-group">
            <label>GoogleMaps:</label><input type="text" value="<%= monitoria.googlemaps %>" class="form-control" name="googlemaps">
          </div>
          <button type="submit" onclick="return confirm('Tem certeza que deseja editar essas informações? Esta ação não poderá ser desfeita!');" class="btn btn-default">Enviar</button>
        </form>
     </div>
     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
