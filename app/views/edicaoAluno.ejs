<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>

  </style>
</head>

<body>
  <header>
     <nav class="navbar navbar-inverse navbar-static-top">
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
          <form class="navbar-form navbar-left">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </div><!-- /.navbar-collapse -->
     </nav>
  </header>

   <main>
     <div class="container cadastro">
       <div class="jumbotron">
        <p>Editar [<%= aluno.nome %>]: </p>
        <form action="/alunos/editar/<%= aluno._id %>" method="post" class="form-horizontal">
          <div class="form-group">
            <label>Nome:</label><input type="text" value="<%= aluno.nome %>" class="form-control form-control-sm" name="nome">
          </div>
          <div class="form-group">
            <label>Matrícula:</label><input type="text" value="<%= aluno.matricula %>" class="form-control" name="matricula">
          </div>
          <div class="form-group">
            <label>Telefone:</label><input type="text" value="<%= aluno.telefone %>" class="form-control" name="telefone">
          </div>
          <div class="form-group">
            <label>Login (e-mail):</label><input type="email" value="<%= aluno.login %>" class="form-control" name="login">
          </div>
          <div class="form-group">
            <label>Senha:</label><input type="password" class="form-control" name="senha">
          </div>
          <div class="form-group">
            <label>Nota:</label><input type="number" value="<%= aluno.nota %>" class="form-control" name="nota">
          </div>
          <button type="submit" onclick="return confirm('Tem certeza que deseja editar essas informações? Esta ação não poderá ser desfeita!');" class="btn btn-default">Enviar</button>
        </form>
     </div>
     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
