<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>

  </style>
</head>

<body>
  <header>
    <% include partials/navebar %>
  </header>

   <main>
     <div class="container cadastro">
       <div class="jumbotron">
        <p>Editar [<%= monitoria.nomeDisciplina %>]: </p>
        <form action="/monitorias/editar/<%= monitoria._id %>" method="post" class="form-horizontal">
          <div class="form-group">
            <label>Nome:</label><input type="text" value="<%= monitoria.nomeDisciplina %>" class="form-control form-control-sm" name="nomeDisciplina">
          </div>
          <div class="form-group">
            <label>Código:</label><input type="text" value="<%= monitoria.codigoDisciplina %>" class="form-control" name="codigoDisciplina">
          </div>
          <div class="form-group">
            <label>Local:</label><input type="text" value="<%= monitoria.local %>" class="form-control" name="local">
          </div>
          <div class="form-group">
            <label>Oferta:</label><input type="text" value="<%= monitoria.oferta %>" class="form-control" name="oferta">
          </div>
          <div class="form-group">
            <label>Professor:</label><input type="text" value="" class="form-control" name="professorCodigo">
          </div>
          <div class="form-group">
            <label>Monitor:</label><input type="text" value="" class="form-control" name="alunoMatricula">
          </div>
          <div class="form-group">
            <label>GoogleMaps:</label><input type="text" value="<%= monitoria.googlemaps %>" class="form-control" name="googlemaps">
          </div>
          <button type="submit" onclick="return confirm('Tem certeza que deseja editar essas informações? Esta ação não poderá ser desfeita!');" class="btn btn-default">Enviar</button>
        </form>
     </div>
     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
