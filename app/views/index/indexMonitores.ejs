<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
  </style>
</head>
<body>
  <header>
    <% include partials/navebar %>
  </header>

   <main>
     <div class="container listagem">

       <div class="jumbotron dadosPrincipais">
        <p>Bem-vinda(o), <%= monitor.nome %></p>
        <table>
          <thead>
            <tr>
              <th>Nome</th>
              <th>Matrícula</th>
              <th>E-mail</th>
              <th>Editar Dados</th>
            </tr>
            <tr>
              <th><%= monitor.nome %></th>
              <th><%= monitor.matricula %></th>
              <th><%= monitor.login %></th>
              <th><a class="btn btn-warning" href="/monitores/editar/<%= monitor._id %>">Editar</a></th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>

     <div class="jumbotron listaAtividades">
       <p>Atividades</p>
       <table>
         <thead>
            <tr>
              <th>TIPO</th>
              <th>DESCRIÇÃO</th>
              <th>PRAZO</th>
              <th>FINALIZAR</th>
            </tr>
         </thead>
         <tbody>
           <% atividades.forEach(function(atividade) { %>
           <tr>
             <th><%= atividade.tipoDeAtividade %></th>
             <th><%= atividade.descricao       %></th>
             <th><%= atividade.prazo           %></th>
             <th><a class="btn btn-warning btn-block" href="/atividades/finalizar/<%= atividade._id %>">Finalizar Atividade</a></th>
           </tr>
           <% }) %>
         </tbody>
       </table>
     </div>

     <div class="jumbotron pesquisaMonitorias">
      <p>Procurar Monitoria</p>
      <form action="/monitorias/pesquisar/<%= monitor._id %>" method="get" class="form-inline">
        <label class="sr-only" for="nomeMonitoria">Nome da Monitoria</label>
        <input type="text" class="form-control" id="nomeMonitoria" name="nomeMonitoria" placeholder="Cálculo I...">
        <button type="submit" class="btn btn-primary">Pesquisar</button>
      </form>
    </div>

     <div class="jumbotron listaNotificacoes">
       <p>Notificações</p>
     </div>

     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
