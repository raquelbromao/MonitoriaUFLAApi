<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
  </style>
</head>
<body>
  <header>
    <% include partials/navebar %>
  </header>

   <main>
     <div class="container listagem">

       <div class="jumbotron">
        <p>Bem-vinda(o), <%= aluno.nome %></p>
        <table>
          <thead>
            <tr>
              <th>Nome</th>
              <th>Matrícula</th>
              <th>E-mail</th>
              <!-- <th>Editar Dados</th> -->
            </tr>
            <tr>
              <th><%= aluno.nome %></th>
              <th><%= aluno.matricula %></th>
              <th><%= aluno.login %></th>
              <!-- <th><a class="btn btn-warning" href="#">Editar</a></th> -->
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
        <p>Links</p>
        <div class="list-group">
          <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action active">Index</a>
            <a href="/alunos/editar/<%= aluno._id %>" class="list-group-item list-group-item-action">Editar Dados</a>
            <a href="/monitorias/lista" class="list-group-item list-group-item-action disabled">Lista de Monitorias</a>
            <a href="#" class="list-group-item list-group-item-action disabled">Pesquisar Monitorias</a>
            <a href="#" class="list-group-item list-group-item-action disabled">Monitorias Cadastradas</a>
            <a href="/login" class="list-group-item list-group-item-action">Sair</a>
          </div>
        </div>
      </div>

      <div class="jumbotron pesquisaMonitorias">
       <p>Procurar Monitoria</p>
       <form action="/monitorias/pesquisar/<%= aluno._id %>" method="get" class="form-inline">
         <label class="sr-only" for="nomeMonitoria">Nome da Monitoria</label>
         <input type="text" class="form-control" id="nomeMonitoria" name="nomeMonitoria" placeholder="Cálculo I...">
         <button type="submit" class="btn btn-primary">Pesquisar</button>
       </form>
     </div>

     <div class="jumbotron">
       <p>Monitorias Cadastradas</p>
       <table>
         <thead>
           <tr>
             <th>Matéria</th>
             <th>Código</th>
             <th>Local</th>
             <th>Cancelar</th>
           </tr>
         </thead>
         <tbody>
           <% monitorias.forEach(function(monitoria) { %>
           <tr>
             <th><%= monitoria.nome %></th>
             <th><%= monitoria.codigo %></th>
             <th><%= monitoria.local %></th>
             <th><a class="btn btn-warning" href="/monitorias/cancelar/<%= aluno._id %>">Cancelar Inscrição</a></th>
           </tr>
           <% }) %>
         </tbody>
       </table>
     </div>

     <div class="jumbotron">
       <p>Notificações</p>
     </div>

     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
