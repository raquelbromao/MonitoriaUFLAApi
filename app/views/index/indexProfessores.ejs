<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
  </style>
</head>
<body>
  <header>
    <% include partials/navebar %>
  </header>

   <main>
     <div class="container listagem">

      <div class="jumbotron">
        <p>Bem-vinda(o), <%= professor.nome %></p>
        <table>
          <thead>
            <tr>
              <th>Nome</th>
              <th>Código</th>
              <th>E-mail</th>
              <th>Editar Dados</th>
            </tr>
            <tr>
              <th><%= professor.nome %></th>
              <th><%= professor.codigo %></th>
              <th><%= professor.login %></th>
              <th><a class="btn btn-warning btn-block" href="#"><span class="glyphicon glyphicon-pencil"></span> Editar Dados</a></th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>

      <div class="jumbotron Monitorias">
        <p>Monitorias</p>
        <table>
          <thead>
            <tr>
              <th>DISCIPLINA</th>
              <th>CÓDIGO</th>
              <th>MONITOR</th>
              <th>SEMESTRE</th>
              <th>DETALHES</th>
            </tr>
            <% monitorias.forEach(function(monitoria) { %>
              <tr>
                <th><%= monitoria.nomeDisciplina %></th>
                <th><%= monitoria.codigoDisciplina %></th>
                <th><%= monitoria.monitorNome %></th>
                <th><%= monitoria.oferta %></th>
                <th><a class="btn btn-info btn-block" href="/planoMonitoria/index/<%= professor._id %>/<%= monitoria._id %>"><span class="glyphicon glyphicon-plus"></span></a></th>
              </tr>
            <% }) %>       
            </thead>
          <tbody>
          </tbody>
        </table>
      </div>

     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
