<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <% include partials/head %>
</head>
<body>
  <header>
    <% include partials/navebar %>
  </header>

  <main>
    <div class="container">

      <div class="jumbotron">
      <% if (perfil == 'Monitor') { %> 
        <% if (possuiPlano) { %>
            <% if (possuiAtividades) { %> 
                <form class="form-inline" action="/monitoriaVigente/atividades/pesquisar" method="POST">
                        <div class="form-group">
                                <label>Ano:</label>
                                <select class="form-control" name="ano">
                                  <option value="null">-------</option>
                                  <option value="2018">2018</option>
                                </select>
                        </div>
                        <div class="form-group">
                                <label>Mês:</label>
                                <select class="form-control" name="mes">
                                  <option value="null">-------</option>
                                  <option value="janeiro">Janeiro</option>
                                  <option value="fevereiro">Fevereiro</option>
                                  <option value="março">Março</option>
                                  <option value="abril">Abril</option>
                                  <option value="maio">Maio</option>
                                  <option value="junho">Junho</option>
                                  <option value="julho">Julho</option>
                                  <option value="agosto">Agosto</option>
                                  <option value="setembro">Setembro</option>
                                  <option value="outubro">Outubro</option>
                                  <option value="novembro">Novembro</option>
                                  <option value="dezembro">Dezembro</option>
                                </select>
                        </div>
                        <div class="form-group">
                                <label>Tipo:</label>
                                <select class="form-control" name="tipo">
                                    <option value="null"> -------</option>
                                    <option value="ATV01">Atendimento aos alunos</option>
                                    <option value="ATV02">Elaboração de material didático</option>
                                    <option value="ATV03">Correção de avaliações</option>
                                    <option value="ATV04">Monitoria em aula</option>
                                    <option value="ATV05">Outros</option>
                                </select>    
                        </div>
                    <button type="submit" class="btn btn-default btn-primary">Pesquisar</button>
                </form>
                <br>
                      <a class="btn btn-raised btn-primary btn-block" href="/monitoriaVigente/atividades/registrarAtividade">Cadastrar Atividade</a>
            <% } else { %>
                Sem atividades registradas!
                <a class="btn btn-raised btn-primary btn-block" href="/monitoriaVigente/atividades/registrarAtividade">Cadastrar Atividade</a>
            <% } %>    
        <% } else { %>
            Não há Plano de Trabalho registrado ainda!
        <% } %>
       <% }  else { %>
        <h1>Usuário não autorizado!</h1>
       <% } %>
     </div>
      

    </div>
  </main>

  <footer>
  </footer>
</body>
</html>
